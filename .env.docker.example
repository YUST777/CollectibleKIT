# ICPC HUE Docker Environment Variables Template
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE (Supabase)
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ===========================================
# JWT / API SECRETS
# ===========================================
JWT_SECRET=your-jwt-secret-here
API_SECRET_KEY=your-api-secret-key-here

# ===========================================
# ENCRYPTION
# ===========================================
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=mail.icpchue.xyz
SMTP_PORT=587
SMTP_USER=noreply@icpchue.xyz
SMTP_PASS=your-smtp-password
EMAIL_FROM=ICPC HUE <noreply@icpchue.xyz>

# ===========================================
# JUDGE0
# ===========================================
JUDGE0_API_URL=http://judge0-server:2358
JUDGE0_API_KEY=your-judge0-api-key

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=yourredispassword

# ===========================================
# SITE
# ===========================================
NEXT_PUBLIC_SITE_URL=https://icpchue.xyz
